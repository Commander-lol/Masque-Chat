{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "consistent-return": 2,
    "no-use-before-define": 2,
    "comma-dangle": 2,
    "max-len": [1, 140],
    "no-nested-ternary": 0,
    "import/no-unresolved": [2, { "ignore": ["electron"] }],
    "react/jsx-no-bind": 2,
    "react/prefer-stateless-function": 1
  },
  "plugins": [
    "import",
    "react"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.eslint.js"
      }
    }
  }
}
